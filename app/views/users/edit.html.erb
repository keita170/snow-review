<h3><%= @user.name %>さんの編集画面</h3>

<%= form_with model:@user, local: true do |f| %>

<%= f.label :"名前" %>
<%= f.text_field :name %>

<%= f.label :"自己紹介" %>
<%= f.text_field :introduction %>

<%= f.label :"ステータス" %>
<%= f.text_field :status %>

<%= f.label :"画像" %>
<%= f.file_field :image %>

<%= f.submit '編集する' %>
<% end %>

<%= link_to 'マイページへ戻る', user_path(@user) %>